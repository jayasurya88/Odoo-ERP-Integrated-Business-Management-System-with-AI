<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Main Inventory Menu -->
        <menuitem id="menu_erp_inventory_root"
                  name="ERP Inventory"
                  sequence="10"
                  web_icon="erp_inventory,static/description/icon.png"/>

        <!-- Products Menu -->
        <menuitem id="menu_inventory_products"
                  name="Products"
                  parent="menu_erp_inventory_root"
                  sequence="10"/>

        <menuitem id="menu_product_template"
                  name="Products"
                  parent="menu_inventory_products"
                  action="product.product_template_action"
                  sequence="10"/>

        <menuitem id="menu_product_low_stock"
                  name="Low Stock Alerts"
                  parent="menu_inventory_products"
                  action="action_product_low_stock"
                  sequence="20"/>

        <!-- Warehouse Menu -->
        <menuitem id="menu_inventory_warehouse"
                  name="Warehouse"
                  parent="menu_erp_inventory_root"
                  sequence="20"/>

        <menuitem id="menu_stock_warehouse"
                  name="Warehouses"
                  parent="menu_inventory_warehouse"
                  action="stock.action_warehouse_form"
                  sequence="10"/>

        <menuitem id="menu_stock_location"
                  name="Locations"
                  parent="menu_inventory_warehouse"
                  action="stock.action_location_form"
                  sequence="20"/>

        <!-- Operations Menu -->
        <menuitem id="menu_inventory_operations"
                  name="Operations"
                  parent="menu_erp_inventory_root"
                  sequence="30"/>

        <menuitem id="menu_stock_picking"
                  name="Transfers"
                  parent="menu_inventory_operations"
                  action="stock.action_picking_tree_all"
                  sequence="10"/>

        <menuitem id="menu_stock_move"
                  name="Stock Moves"
                  parent="menu_inventory_operations"
                  action="stock.stock_move_action"
                  sequence="20"/>

        <!-- Inventory Menu -->
        <menuitem id="menu_inventory_control"
                  name="Inventory Control"
                  parent="menu_erp_inventory_root"
                  sequence="40"/>

        <menuitem id="menu_stock_quant"
                  name="Stock on Hand"
                  parent="menu_inventory_control"
                  action="stock.product_open_quants"
                  sequence="10"/>

    </data>
</odoo>
