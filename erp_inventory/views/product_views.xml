<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Product Template Form View -->
        <record id="view_product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="qr_code"/>
                </xpath>
                <xpath expr="//page[@name='inventory']" position="inside">
                    <group string="Stock Management">
                        <group>
                            <field name="min_stock_level"/>
                            <field name="max_stock_level"/>
                            <field name="reorder_quantity"/>
                        </group>
                        <group>
                            <field name="warehouse_location"/>
                            <field name="is_low_stock" readonly="1"/>
                            <field name="stock_status" readonly="1" widget="badge" 
                                   decoration-success="stock_status == 'in_stock'"
                                   decoration-warning="stock_status == 'low_stock'"
                                   decoration-danger="stock_status == 'out_of_stock'"/>
                        </group>
                    </group>
                    <group>
                        <button name="action_generate_reorder_suggestion" 
                                string="Generate Reorder Suggestion" 
                                type="object" 
                                class="oe_highlight"
                                attrs="{'invisible': [('is_low_stock', '=', False)]}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Product Template Tree View -->
        <record id="view_product_template_tree_inherit" model="ir.ui.view">
            <field name="name">product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="after">
                    <field name="qty_available" string="On Hand"/>
                    <field name="stock_status" widget="badge"
                           decoration-success="stock_status == 'in_stock'"
                           decoration-warning="stock_status == 'low_stock'"
                           decoration-danger="stock_status == 'out_of_stock'"/>
                    <field name="is_low_stock" invisible="1"/>
                </xpath>
            </field>
        </record>

        <!-- Low Stock Products View -->
        <record id="view_product_template_low_stock" model="ir.ui.view">
            <field name="name">product.template.low.stock</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree string="Low Stock Products" decoration-danger="is_low_stock == True">
                    <field name="name"/>
                    <field name="categ_id"/>
                    <field name="qty_available"/>
                    <field name="min_stock_level"/>
                    <field name="reorder_quantity"/>
                    <field name="stock_status" widget="badge"/>
                    <field name="is_low_stock" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Low Stock Products Action -->
        <record id="action_product_low_stock" model="ir.actions.act_window">
            <field name="name">Low Stock Alerts</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_low_stock', '=', True)]</field>
            <field name="view_id" ref="view_product_template_low_stock"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No low stock products found!
                </p>
                <p>
                    Products will appear here when their stock falls below the minimum level.
                </p>
            </field>
        </record>

    </data>
</odoo>
