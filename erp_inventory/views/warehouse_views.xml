<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Warehouse Form View -->
        <record id="view_warehouse_form_inherit" model="ir.ui.view">
            <field name="name">stock.warehouse.form.inherit</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="manager_id"/>
                    <field name="is_active"/>
                </xpath>
                <xpath expr="//group[@name='group_resupply']" position="after">
                    <group string="Warehouse Details">
                        <group>
                            <field name="capacity"/>
                            <field name="current_utilization" widget="progressbar"/>
                        </group>
                        <group>
                            <field name="contact_phone"/>
                            <field name="contact_email" widget="email"/>
                        </group>
                    </group>
                    <group string="Address">
                        <field name="address" nolabel="1"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Stock Location Form View -->
        <record id="view_location_form_inherit" model="ir.ui.view">
            <field name="name">stock.location.form.inherit</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <group string="Location Details">
                        <group>
                            <field name="aisle"/>
                            <field name="rack"/>
                            <field name="shelf"/>
                            <field name="bin"/>
                        </group>
                        <group>
                            <field name="temperature_controlled"/>
                            <field name="temperature_range" attrs="{'invisible': [('temperature_controlled', '=', False)]}"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Stock Quant Tree View -->
        <record id="view_stock_quant_tree_inherit" model="ir.ui.view">
            <field name="name">stock.quant.tree.inherit</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='quantity']" position="after">
                    <field name="batch_number"/>
                    <field name="expiry_date"/>
                    <field name="last_inventory_date"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
