<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Employee Form View -->
        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='work_phone']" position="after">
                    <field name="employee_code"/>
                    <field name="employment_status" widget="badge"/>
                </xpath>
                <xpath expr="//page[@name='personal_information']" position="inside">
                    <group string="Personal Details">
                        <group>
                            <field name="date_of_birth"/>
                            <field name="age" readonly="1"/>
                            <field name="blood_group"/>
                        </group>
                        <group>
                            <field name="emergency_contact"/>
                            <field name="emergency_phone"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page string="Employment Details">
                        <group>
                            <group>
                                <field name="date_of_joining"/>
                                <field name="date_of_leaving"/>
                                <field name="probation_period"/>
                                <field name="is_probation" readonly="1" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="performance_rating" widget="priority"/>
                            </group>
                        </group>
                    </page>
                    <page string="Salary Information">
                        <group>
                            <group>
                                <field name="basic_salary" widget="monetary"/>
                                <field name="allowances" widget="monetary"/>
                                <field name="deductions" widget="monetary"/>
                            </group>
                            <group>
                                <field name="net_salary" widget="monetary" readonly="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <group string="Bank Details">
                            <group>
                                <field name="bank_account_number"/>
                                <field name="bank_name"/>
                            </group>
                            <group>
                                <field name="ifsc_code"/>
                            </group>
                        </group>
                    </page>
                    <page string="Statistics">
                        <group>
                            <group>
                                <field name="total_leaves_taken" readonly="1"/>
                                <field name="total_working_days" readonly="1"/>
                            </group>
                            <group>
                                <field name="attendance_percentage" widget="progressbar" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <button name="action_generate_payslip" 
                                    string="Generate Payslip" 
                                    type="object" 
                                    class="oe_highlight"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Employee Tree View -->
        <record id="view_employee_tree_inherit" model="ir.ui.view">
            <field name="name">hr.employee.tree.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='job_id']" position="after">
                    <field name="employee_code"/>
                    <field name="employment_status" widget="badge"/>
                    <field name="net_salary" widget="monetary"/>
                </xpath>
            </field>
        </record>

        <!-- Department Form View -->
        <record id="view_department_form_inherit" model="ir.ui.view">
            <field name="name">hr.department.form.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="department_head"/>
                    <field name="budget" widget="monetary"/>
                    <field name="employee_count" readonly="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
