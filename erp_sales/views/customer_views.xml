<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Customer Form View -->
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='phone']" position="after">
                    <field name="alternate_phone"/>
                </xpath>
                <xpath expr="//page[@name='sales_purchases']" position="inside">
                    <group string="Customer Classification">
                        <group>
                            <field name="customer_type"/>
                            <field name="customer_rating" widget="priority"/>
                            <field name="tax_id_number"/>
                        </group>
                        <group>
                            <field name="preferred_payment_method"/>
                            <field name="credit_limit" widget="monetary"/>
                            <field name="current_credit_used" widget="monetary" readonly="1"/>
                        </group>
                    </group>
                    <group string="Sales Statistics">
                        <group>
                            <field name="total_orders" readonly="1"/>
                            <field name="total_sales_amount" widget="monetary" readonly="1"/>
                        </group>
                        <group>
                            <field name="average_order_value" widget="monetary" readonly="1"/>
                            <field name="last_order_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <button name="action_view_customer_orders" 
                                string="View All Orders" 
                                type="object" 
                                class="oe_highlight"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Top Customers View -->
        <record id="view_partner_top_customers" model="ir.ui.view">
            <field name="name">res.partner.top.customers</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Top Customers" decoration-success="total_sales_amount &gt; 10000">
                    <field name="name"/>
                    <field name="customer_type"/>
                    <field name="customer_rating" widget="priority"/>
                    <field name="total_orders"/>
                    <field name="total_sales_amount" widget="monetary"/>
                    <field name="average_order_value" widget="monetary"/>
                    <field name="last_order_date"/>
                </tree>
            </field>
        </record>

        <!-- Top Customers Action -->
        <record id="action_top_customers" model="ir.actions.act_window">
            <field name="name">Top Customers</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('customer_rank', '&gt;', 0)]</field>
            <field name="view_id" ref="view_partner_top_customers"/>
            <field name="context">{'search_default_customer': 1}</field>
        </record>

    </data>
</odoo>
