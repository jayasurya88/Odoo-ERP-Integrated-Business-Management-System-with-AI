<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Prediction Sequence -->
        <record id="sequence_stock_prediction" model="ir.sequence">
            <field name="name">Stock Prediction Sequence</field>
            <field name="code">stock.prediction</field>
            <field name="prefix">PRED/</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Stock Prediction Form View -->
        <record id="view_stock_prediction_form" model="ir.ui.view">
            <field name="name">stock.prediction.form</field>
            <field name="model">stock.prediction</field>
            <field name="arch" type="xml">
                <form string="Stock Prediction">
                    <header>
                        <button name="action_generate_prediction" string="Generate Prediction" 
                                type="object" class="oe_highlight" 
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_validate" string="Validate" 
                                type="object" class="oe_highlight" 
                                attrs="{'invisible': [('state', '!=', 'predicted')]}"/>
                        <button name="action_create_purchase_order" string="Create Purchase Order" 
                                type="object" class="btn-primary" 
                                attrs="{'invisible': [('state', '!=', 'validated')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,predicted,validated"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="prediction_date"/>
                                <field name="prediction_period"/>
                                <field name="prediction_method"/>
                            </group>
                            <group>
                                <field name="current_stock" readonly="1"/>
                                <field name="min_stock_level" readonly="1"/>
                                <field name="max_stock_level" readonly="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <group string="Prediction Results">
                            <group>
                                <field name="predicted_demand" readonly="1"/>
                                <field name="confidence_score" widget="progressbar" readonly="1"/>
                            </group>
                            <group>
                                <field name="reorder_quantity" readonly="1"/>
                                <field name="reorder_priority" widget="badge" readonly="1"
                                       decoration-info="reorder_priority == 'low'"
                                       decoration-warning="reorder_priority == 'medium'"
                                       decoration-danger="reorder_priority == 'high'"
                                       decoration-danger="reorder_priority == 'urgent'"/>
                            </group>
                        </group>
                        <group string="Actual Data (For Validation)">
                            <group>
                                <field name="actual_demand"/>
                                <field name="accuracy" widget="progressbar" readonly="1"/>
                            </group>
                            <group>
                                <field name="notes" placeholder="Additional notes..."/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Stock Prediction Tree View -->
        <record id="view_stock_prediction_tree" model="ir.ui.view">
            <field name="name">stock.prediction.tree</field>
            <field name="model">stock.prediction</field>
            <field name="arch" type="xml">
                <tree string="Stock Predictions" decoration-danger="reorder_priority == 'urgent'" 
                      decoration-warning="reorder_priority == 'high'">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="prediction_date"/>
                    <field name="current_stock"/>
                    <field name="predicted_demand"/>
                    <field name="reorder_quantity"/>
                    <field name="reorder_priority" widget="badge"/>
                    <field name="confidence_score" widget="progressbar"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Stock Prediction Graph View -->
        <record id="view_stock_prediction_graph" model="ir.ui.view">
            <field name="name">stock.prediction.graph</field>
            <field name="model">stock.prediction</field>
            <field name="arch" type="xml">
                <graph string="Prediction Analysis" type="line">
                    <field name="prediction_date"/>
                    <field name="predicted_demand" type="measure"/>
                    <field name="actual_demand" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Stock Prediction Action -->
        <record id="action_stock_prediction" model="ir.actions.act_window">
            <field name="name">Stock Predictions</field>
            <field name="res_model">stock.prediction</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new stock prediction
                </p>
                <p>
                    Use AI to predict product demand and get reorder suggestions.
                </p>
            </field>
        </record>

        <!-- Urgent Reorders Action -->
        <record id="action_urgent_reorders" model="ir.actions.act_window">
            <field name="name">Urgent Reorders</field>
            <field name="res_model">stock.prediction</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('reorder_priority', 'in', ['urgent', 'high']), ('state', '=', 'predicted')]</field>
        </record>

        <!-- Product Template Form Inherit -->
        <record id="view_product_template_form_prediction" model="ir.ui.view">
            <field name="name">product.template.form.prediction</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_predictions" type="object" class="oe_stat_button" icon="fa-line-chart">
                        <field name="prediction_count" widget="statinfo" string="Predictions"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='qty_available']" position="after">
                    <field name="latest_prediction" readonly="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
