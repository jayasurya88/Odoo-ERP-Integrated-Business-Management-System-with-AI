<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron Job for Automatic Prediction Generation -->
        <record id="ir_cron_generate_predictions" model="ir.cron">
            <field name="name">Generate Stock Predictions</field>
            <field name="model_id" ref="model_stock_prediction"/>
            <field name="state">code</field>
            <field name="code">model.cron_generate_predictions()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
